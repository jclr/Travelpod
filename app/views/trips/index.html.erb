<h1>Listing trips</h1>

<table>
  <tr>
    <th>Post</th>
    <th>Lat</th>
    <th>Lon</th>
    <th>Date</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.post %></td>
    <td><%= trip.lat %></td>
    <td><%= trip.lon %></td>
    <td><%= trip.date %></td>
    <td><%= trip.city %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

