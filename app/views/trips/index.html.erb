<h1>Listing trips</h1>

<table>
  <tr>
    <th>User</th>
    <th>Post</th>
    <th>Date</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.user_name %></td>
    <td><%= trip.post %></td>
    <td><%= trip.date %></td>
    <td><%= trip.city_name %></td>
    <td><%= link_to 'Show', trip %></td>
    <% user_trips = Trip.current_user_trips(current_user).all %>
    <% if user_trips.include? trip %>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Trip', new_trip_path, class: 'btn btn-primary' %>
