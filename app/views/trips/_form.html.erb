<%= form_for(@trip, html: { class: 'form-horizontal' } ) do |f| %>
  <% if @trip.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trip.errors.count, "error") %> prohibited this trip from being saved:</h2>

      <ul>
      <% @trip.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :post,
                class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :post %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :lat,
                class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :lat %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :lon,
                class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :lon %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :date,
                class: 'control-label' %>
    <div class="controls">
      <%= f.date_select :date %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :city,
                class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :city %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :user_id,
                class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :user_id %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
