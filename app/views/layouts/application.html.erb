<!DOCTYPE html>
<html>
<head>
  <title>Travelpod</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="container">
  <% if notice %>
    <p class="notice"><%= notice %></p>
  <% end %>
  <% if alert %>
    <p class="alert"><%= alert %></p>
  <% end %>
  <% if user_signed_in? %>
    <%= link_to 'Logout',
    destroy_user_session_path,
    method: :delete,
    class: 'btn btn-danger' %>
    <%= link_to "Users", users_path, class: 'btn btn-success' %>
    <%= link_to "Trips", trips_path, class: 'btn btn-success' %>
    <%= link_to "Cities", cities_path, class: 'btn btn-success' %>
    <% end %>
</div>

<div class="container">
    <%= yield %>
</div>

</body>
</html>
